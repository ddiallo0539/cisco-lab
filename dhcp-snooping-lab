Sw1

enable
conf t
hostname Sw1
no ip domain-lookup
vlan 10
exit
inter vlan 10
ip add 10.1.1.3 255.255.255.0
no sh
exit
int gig0/1
switchport mode access
switchport access vlan 10
no sh
exit
int gig0/0
switchport mode access
switchport access vlan 10
no sh
exit
!
ip dhcp snooping
ip dhcp snooping vlan 10
interface gig 0/0
ip dhcp snooping trust
exit
no ip dhcp snooping information option
!
