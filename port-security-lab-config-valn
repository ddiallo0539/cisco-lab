sw2

enable
conf t
no ip domain-lookup
hostname Sw2
vlan 100
exit
int gig0/0
switchport mode access
switchport access vlan 100
no sh
exit
int gig0/2
switchport mode access
switchport access vlan 100
no sh
exit
int vlan 100
ip add 10.100.1.2 255.255.255.0
no sh
exit
inter gig0/1
switchport mode access
switchport access vlan 100
no sh
exit
!
int gig0/1
switchport port-security
switchport port-security violation restrict
!
int gig0/2
switchport port-security
switchport port-security violation protect
!
