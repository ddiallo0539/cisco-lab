sw1

enable
conf t
no ip domain-lookup
hostname sw1
vlan 100
exit
int gig0/1
switchport mode access
switchport access vlan 100
no sh
exit
int gig0/0
switchport mode access
switchport access vlan 100
no sh
exit
int vlan 100
ip add 10.100.1.1 255.255.255.0
no sh
exit
!
int gig0/1
switchport port-security 
exit

